    <% child.parents.uniq.each do |parent| %>
      <div class="bottom_border">
        <p>child's name: <%= child.name%></p>
        <p>child's age: <%=child.age%></p>
        <p>gender: <%=child.gender%></p>
      </div>
    <%end%>
  <%end%>
  <br>
 </div>
